{
  "version": 2,
  "env": {
    "MONGO_URI": "@mongodb-uri"
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
